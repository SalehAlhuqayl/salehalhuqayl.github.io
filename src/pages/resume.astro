---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import { getBrandInfo } from '../utils/content';
import { withBase } from '../utils/url';

const brandInfo = getBrandInfo();
---

<Layout>
  <!-- Hero Section -->
  <section class="pt-24 pb-16 bg-gradient-to-r from-purple-600 to-blue-600">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-bold text-white sm:text-5xl lg:text-6xl">
          Resume
        </h1>
        <p class="mt-6 text-xl text-purple-100 max-w-3xl mx-auto">
          Comprehensive overview of my professional experience, education, and technical expertise
        </p>
        
        <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center">
          <Button 
            variant="secondary" 
            size="lg" 
            href={withBase('/SalehAlhuqayl_CV_EN.pdf')}
            target="_blank"
            class="bg-white text-purple-600 hover:bg-gray-50"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            Download PDF
          </Button>
          
          <Button 
            variant="ghost" 
            size="lg" 
            href={withBase('/contact')}
            class="text-white border-white hover:bg-white hover:text-purple-600"
          >
            Contact Me
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Resume Viewer -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <!-- Header -->
        <div class="bg-gray-800 px-6 py-4 flex items-center justify-between">
          <h2 class="text-white font-semibold">
            {brandInfo.name} - Data Scientist CV
          </h2>
          
          <div class="flex items-center space-x-3">
            <Button 
              variant="ghost" 
              size="sm"
              href={withBase('/SalehAlhuqayl_CV_EN.pdf')}
              target="_blank"
              class="text-white border-white hover:bg-white hover:text-gray-800"
            >
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
              Open in New Tab
            </Button>
            
            <button 
              class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
              onclick="window.print()"
            >
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
              </svg>
              Print
            </button>
          </div>
        </div>
        
        <!-- PDF Embed -->
        <div class="relative" style="height: 800px;">
          <iframe 
            src={withBase('/SalehAlhuqayl_CV_EN.pdf')}
            class="w-full h-full"
            title="Saleh Alhuqayl CV"
            loading="lazy"
          >
          </iframe>
          
          <!-- Fallback for browsers that don't support PDF -->
          <noscript>
            <div class="flex items-center justify-center h-full bg-gray-100">
              <div class="text-center">
                <svg class="w-12 h-12 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                <p class="text-gray-600 mb-4">PDF preview not available in your browser</p>
                <Button 
                  variant="primary" 
                  href={withBase('/SalehAlhuqayl_CV_EN.pdf')}
                  target="_blank"
                >
                  Download Resume
                </Button>
              </div>
            </div>
          </noscript>
        </div>
      </div>
      
      <!-- Alternative Text Summary -->
      <div class="mt-12 bg-white rounded-lg shadow-sm p-8">
        <h3 class="text-2xl font-bold text-gray-900 mb-6">Resume Summary</h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <h4 class="text-lg font-semibold text-gray-900 mb-4">Professional Experience</h4>
            <ul class="space-y-3 text-gray-600">
              <li class="flex items-start">
                <svg class="w-4 h-4 text-blue-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                <span><strong>Data Scientist</strong> at Mozn (Current)</span>
              </li>
              <li class="flex items-start">
                <svg class="w-4 h-4 text-blue-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                <span><strong>Data Scientist</strong> at Ministry of Hajj & Umrah (Mozn Project)</span>
              </li>
              <li class="flex items-start">
                <svg class="w-4 h-4 text-blue-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                <span><strong>Operations Analyst Intern</strong> at Boeing Saudi Arabia</span>
              </li>
            </ul>
          </div>
          
          <div>
            <h4 class="text-lg font-semibold text-gray-900 mb-4">Education & Certifications</h4>
            <ul class="space-y-3 text-gray-600">
              <li class="flex items-start">
                <svg class="w-4 h-4 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                <span><strong>Computer Science Bachelor's Degree</strong> - 4.72 GPA</span>
              </li>
              <li class="flex items-start">
                <svg class="w-4 h-4 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                <span><strong>IBM</strong> Predictive Analytics Modeler Certificate</span>
              </li>
              <li class="flex items-start">
                <svg class="w-4 h-4 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                <span><strong>Udacity</strong> AI Programming with Python - Nanodegree Program</span>
              </li>
              <li class="flex items-start">
                <svg class="w-4 h-4 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                <span><strong>INE</strong> Jr Data Scientist Certificate</span>
              </li>
              <li class="flex items-start">
                <svg class="w-4 h-4 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                <span><strong>Huawei</strong> HCIA-AI Certificate</span>
              </li>
            </ul>
          </div>
        </div>
        
        <div class="mt-8 pt-8 border-t border-gray-200">
          <h4 class="text-lg font-semibold text-gray-900 mb-4">Core Competencies</h4>
          <div class="flex flex-wrap gap-2">
            {['Python', 'Machine Learning', 'Data Quality', 'Predictive Analytics', 'Business Intelligence', 'Statistical Modeling', 'SQL', 'Power BI', 'R', 'Tidyverse', 'ggplot2', 'Data Analysis', 'Financial Modeling'].map((skill) => (
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                {skill}
              </span>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16 bg-purple-600">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white sm:text-4xl mb-4">
        Ready to Discuss Opportunities?
      </h2>
      <p class="text-xl text-purple-100 mb-8 max-w-2xl mx-auto">
        Let's explore how my experience and skills can contribute to your team's success
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button 
          variant="secondary" 
          size="lg" 
          href={withBase('/contact')}
          class="bg-white text-purple-600 hover:bg-gray-50"
        >
          Schedule a Discussion
        </Button>
        <Button 
          variant="ghost" 
          size="lg" 
          href={withBase('/work')}
          class="text-white border-white hover:bg-white hover:text-purple-600"
        >
          View My Portfolio
        </Button>
      </div>
    </div>
  </section>
</Layout>

<style>
  @media print {
    .no-print {
      display: none !important;
    }
    
    body * {
      visibility: hidden;
    }
    
    iframe, iframe * {
      visibility: visible;
    }
    
    iframe {
      position: absolute;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
    }
  }
</style>