---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import Button from '../components/Button.astro';
import { getProjects, getHighlights } from '../utils/content';

const projects = getProjects();
const highlights = getHighlights();
---

<Layout>
  <!-- Hero Section -->
  <section class="pt-24 pb-16 bg-gradient-to-r from-gray-900 to-blue-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-bold text-white sm:text-5xl lg:text-6xl">
          My Work
        </h1>
        <p class="mt-6 text-xl text-gray-300 max-w-3xl mx-auto">
          Deep-dive projects & case studies showcasing data science solutions that delivered measurable business impact
        </p>
      </div>
    </div>
  </section>

  <!-- Impact Overview -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl">
          Proven Impact
        </h2>
        <p class="mt-4 text-xl text-gray-600 max-w-3xl mx-auto">
          Quantifiable results across different sectors and project types
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {highlights.map((highlight) => (
          <div class="text-center p-6 bg-gray-50 rounded-lg">
            <div class="text-4xl font-bold text-blue-600 mb-2">
              {highlight.number}
            </div>
            <div class="text-lg font-semibold text-gray-900 mb-2">
              {highlight.label}
            </div>
            <div class="text-gray-600">
              {highlight.description}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Case Studies -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl">
         Projects & Case Studies
        </h2>
        <p class="mt-4 text-xl text-gray-600 max-w-3xl mx-auto">
          Detailed exploration of how I approach complex data challenges
        </p>
      </div>
      
      <div class="space-y-16">
        {projects.map((project, index) => (
          <article class="bg-white rounded-2xl shadow-lg overflow-hidden">
            <!-- Project Content -->
            <div class="p-8 lg:p-12">
                <div class="mb-6">
                  <div class="text-sm text-blue-600 font-semibold mb-2">
                    Project {index + 1}
                  </div>
                  <h3 class="text-2xl font-bold text-gray-900 mb-2">
                    {project.name}
                  </h3>
                  <div class="flex items-center text-gray-600 mb-4">
                    <span class="font-medium">{project.role}</span>
                    <span class="mx-2">•</span>
                    <span>{project.period}</span>
                  </div>
                  
                  <!-- Technology Stack -->
                  <div class="flex flex-wrap gap-2 mb-6">
                    {project.stack.map((tech) => (
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                        {tech}
                      </span>
                    ))}
                  </div>
                </div>

                <!-- Problem → Approach → Impact Structure -->
                <div class="space-y-6">
                  <!-- Problem -->
                  <div>
                    <h4 class="font-semibold text-gray-900 mb-2 flex items-center">
                      <svg class="w-5 h-5 text-red-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z" />
                      </svg>
                      Problem
                    </h4>
                    <p class="text-gray-600 leading-relaxed">
                      {project.problem}
                    </p>
                  </div>

                  <!-- Approach -->
                  <div>
                    <h4 class="font-semibold text-gray-900 mb-2 flex items-center">
                      <svg class="w-5 h-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                      </svg>
                      Approach
                    </h4>
                    <ul class="space-y-2 text-gray-600">
                      {project.approach.map((step) => (
                        <li class="flex items-start">
                          <svg class="w-4 h-4 text-blue-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                          </svg>
                          {step}
                        </li>
                      ))}
                    </ul>
                  </div>

                  <!-- Impact -->
                  <div>
                    <h4 class="font-semibold text-gray-900 mb-2 flex items-center">
                      <svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                      </svg>
                      Impact
                    </h4>
                    <ul class="space-y-2 text-gray-600">
                      {project.impact.map((result) => (
                        <li class="flex items-start">
                          <svg class="w-4 h-4 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                          </svg>
                          {result}
                        </li>
                      ))}
                    </ul>
                  </div>
                </div>

                <!-- Action Links -->
                {(project.links.repo || project.links.live) && (
                  <div class="mt-8 flex flex-wrap gap-3">
                    {project.links.repo && (
                      <Button
                        variant="primary"
                        size="sm"
                        href={project.links.repo}
                        target="_blank"
                      >
                        {project.links.repo.includes('github.com') ? (
                          <>
                            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 24 24">
                              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                            </svg>
                            View Code
                          </>
                        ) : (
                          <>
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>
                            View Paper
                          </>
                        )}
                      </Button>
                    )}
                    {project.links.live && (
                      <Button
                        variant="ghost"
                        size="sm"
                        href={project.links.live}
                        target="_blank"
                      >
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                        </svg>
                        Live Demo
                      </Button>
                    )}
                  </div>
                )}
              </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16 bg-gray-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white sm:text-4xl mb-4">
        Ready to Create Impact Together?
      </h2>
      <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
        Let's discuss how I can apply similar methodologies to solve your data challenges
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button 
          variant="primary" 
          size="lg" 
          href="/contact"
        >
          Start a Project
        </Button>
        <Button 
          variant="ghost" 
          size="lg" 
          href="/projects"
          class="text-white border-white hover:bg-white hover:text-gray-900"
        >
          Browse All Projects
        </Button>
      </div>
    </div>
  </section>
</Layout>