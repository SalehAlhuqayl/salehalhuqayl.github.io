---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import { getContactData, getBrandInfo } from '../utils/content';

const contactData = getContactData();
const brandInfo = getBrandInfo();
---

<Layout>
  <!-- Hero Section -->
  <section class="pt-24 pb-16 bg-gradient-to-r from-green-600 to-blue-600">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-bold text-white sm:text-5xl lg:text-6xl">
          Let's Connect
        </h1>
        <p class="mt-6 text-xl text-green-100 max-w-3xl mx-auto">
          {contactData.intro}
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Information -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Details -->
        <div>
          <h2 class="text-2xl font-bold text-gray-900 mb-8">
            Get In Touch
          </h2>
          
          <div class="space-y-6">
            <!-- Email -->
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-medium text-gray-900">Email</h3>
                <p class="mt-1 text-gray-600">Preferred method of contact</p>
                <a href={`mailto:${brandInfo.email}`} class="mt-2 text-green-600 hover:text-green-700 font-medium">
                  {brandInfo.email}
                </a>
              </div>
            </div>

            <!-- Location -->
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-medium text-gray-900">Location</h3>
                <p class="mt-1 text-gray-600">{brandInfo.location}</p>
              </div>
            </div>

            <!-- Availability -->
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-medium text-gray-900">Availability</h3>
                <p class="mt-1 text-gray-600">{contactData.availability}</p>
                <p class="mt-1 text-sm text-green-600">Response time: {contactData.response_time}</p>
              </div>
            </div>
          </div>

          <!-- Social Links -->
          <div class="mt-10">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Connect Online</h3>
            <div class="flex space-x-4">
              <a 
                href={brandInfo.social.linkedin} 
                target="_blank"
                class="inline-flex items-center justify-center w-10 h-10 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition-colors"
                aria-label="LinkedIn"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
              
              <a 
                href={brandInfo.social.github} 
                target="_blank"
                class="inline-flex items-center justify-center w-10 h-10 bg-gray-900 text-white rounded-full hover:bg-gray-800 transition-colors"
                aria-label="GitHub"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
              
              <a 
                href={brandInfo.social.twitter} 
                target="_blank"
                class="inline-flex items-center justify-center w-10 h-10 bg-gray-900 text-white rounded-full hover:bg-gray-800 transition-colors"
                aria-label="X (formerly Twitter)"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>

        <!-- Contact Methods -->
        <div class="relative">
          <!-- Background Gradient -->
          <div class="absolute inset-0 bg-gradient-to-br from-blue-50 via-white to-purple-50 rounded-2xl"></div>
          
          <div class="relative bg-white/80 backdrop-blur-sm rounded-2xl p-8 border border-gray-100 shadow-lg">
            <div class="text-center mb-10">
              <h2 class="text-3xl font-bold text-gray-900 mb-3">
                Let's Start Something Great
              </h2>
              <p class="text-gray-600 text-lg">
                Choose your preferred way to connect
              </p>
            </div>
            
            <div class="space-y-8">
              <!-- Email Contact -->
              <div class="group relative">
                <div class="absolute -inset-1 bg-gradient-to-r from-green-400 to-emerald-500 rounded-2xl blur opacity-25 group-hover:opacity-75 transition duration-500"></div>
                <div class="relative bg-white rounded-xl p-8 text-center border border-gray-100 shadow-sm group-hover:shadow-xl transition-all duration-300">
                  <!-- Email Icon with Animation -->
                  <div class="relative mb-6">
                    <div class="w-16 h-16 bg-gradient-to-br from-green-400 to-emerald-500 rounded-2xl flex items-center justify-center mx-auto group-hover:scale-110 transition-transform duration-300">
                      <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                      </svg>
                    </div>
                    <!-- Floating Dots -->
                    <div class="absolute top-0 right-0 w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
                    <div class="absolute bottom-0 left-0 w-2 h-2 bg-emerald-400 rounded-full animate-pulse delay-300"></div>
                  </div>
                  
                  <h3 class="text-xl font-bold text-gray-900 mb-2">Drop Me a Line</h3>
                  <p class="text-gray-600 mb-6">Perfect for project discussions</p>
                  
                  <Button 
                    href={`mailto:${brandInfo.email}?subject=Let's Collaborate ðŸš€`}
                    variant="primary" 
                    size="lg"
                    class="w-full group-hover:scale-105 transition-transform duration-200"
                  >
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                    </svg>
                    Send Message
                  </Button>
                </div>
              </div>

              <!-- LinkedIn Contact -->
              <div class="group relative">
                <div class="absolute -inset-1 bg-gradient-to-r from-blue-400 to-blue-600 rounded-2xl blur opacity-25 group-hover:opacity-75 transition duration-500"></div>
                <div class="relative bg-white rounded-xl p-8 text-center border border-gray-100 shadow-sm group-hover:shadow-xl transition-all duration-300">
                  <!-- LinkedIn Icon with Animation -->
                  <div class="relative mb-6">
                    <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-700 rounded-2xl flex items-center justify-center mx-auto group-hover:scale-110 transition-transform duration-300">
                      <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                      </svg>
                    </div>
                    <!-- Floating Dots -->
                    <div class="absolute top-0 right-0 w-3 h-3 bg-blue-400 rounded-full animate-pulse"></div>
                    <div class="absolute bottom-0 left-0 w-2 h-2 bg-blue-600 rounded-full animate-pulse delay-300"></div>
                  </div>
                  
                  <h3 class="text-xl font-bold text-gray-900 mb-2">Let's Network</h3>
                  <p class="text-gray-600 mb-6">Connect for opportunities</p>
                  
                  <Button 
                    href={brandInfo.social.linkedin}
                    variant="secondary" 
                    size="lg"
                    target="_blank"
                    class="w-full group-hover:scale-105 transition-transform duration-200"
                  >
                    <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                    </svg>
                    Connect Now
                  </Button>
                </div>
              </div>
            </div>

            <!-- Bottom CTA -->
            <div class="text-center mt-10">
              <div class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-purple-100 to-blue-100 rounded-full">
                <svg class="w-4 h-4 text-purple-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
                <span class="text-sm font-medium text-purple-700">Quick response guaranteed</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl">
          Frequently Asked Questions
        </h2>
      </div>
      
      <div class="space-y-8">
        <div class="bg-white rounded-lg p-6 shadow-sm">
          <h3 class="text-lg font-semibold text-gray-900 mb-2">
            What types of projects do you work on?
          </h3>
          <p class="text-gray-600">
            I specialize in data quality initiatives, predictive analytics, business intelligence systems, and AI-driven solutions. My experience spans government systems, aerospace analytics, and financial market analysis.
          </p>
        </div>
        
        <div class="bg-white rounded-lg p-6 shadow-sm">
          <h3 class="text-lg font-semibold text-gray-900 mb-2">
            How do you approach new projects?
          </h3>
          <p class="text-gray-600">
            I start with understanding the business problem, then design a data strategy that includes stakeholder mapping, technical architecture, and measurable success metrics. Every solution is tailored to deliver quantifiable business impact.
          </p>
        </div>
        
        <div class="bg-white rounded-lg p-6 shadow-sm">
          <h3 class="text-lg font-semibold text-gray-900 mb-2">
            What is your availability for new projects?
          </h3>
          <p class="text-gray-600">
            {contactData.availability}. I typically respond to inquiries within {contactData.response_time.toLowerCase()} to discuss project scope and timeline.
          </p>
        </div>
        
        <div class="bg-white rounded-lg p-6 shadow-sm">
          <h3 class="text-lg font-semibold text-gray-900 mb-2">
            Do you work remotely or on-site?
          </h3>
          <p class="text-gray-600">
            I'm flexible with working arrangements and can adapt to your project needs. Based in {brandInfo.location}, I can work remotely or on-site depending on the project requirements.
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout>