---
import type { Project } from '../types/content';
import Button from './Button.astro';

export interface Props {
  project: Project;
  variant?: 'default' | 'featured' | 'compact';
  showFullDescription?: boolean;
}

const { 
  project, 
  variant = 'default',
  showFullDescription = false
} = Astro.props;

const isCompact = variant === 'compact';
const isFeatured = variant === 'featured';
---

<article class={`bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden hover:shadow-lg transition-all duration-300 ${isFeatured ? 'lg:col-span-2' : ''}`}>
  <!-- Project Content -->
  <div class={`p-6 ${isCompact ? 'p-4' : ''}`}>
    <!-- Project Header -->
    <div class="flex justify-between items-start mb-3">
      <div class="flex-1">
        <h3 class={`font-bold text-gray-900 ${isCompact ? 'text-lg' : 'text-xl'}`}>
          {project.name}
        </h3>
        <div class="flex items-center text-sm text-gray-600 mt-1">
          <span class="font-medium">{project.role}</span>
          <span class="mx-2">•</span>
          <span>{project.period}</span>
        </div>
      </div>
    </div>

    <!-- Technology Stack -->
    <div class="mb-4">
      <div class="flex flex-wrap gap-2">
        {project.stack.slice(0, isCompact ? 3 : undefined).map((tech) => (
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
            {tech}
          </span>
        ))}
        {isCompact && project.stack.length > 3 && (
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
            +{project.stack.length - 3} more
          </span>
        )}
      </div>
    </div>

    <!-- Project Description -->
    <div class="space-y-3 mb-6">
      {/* Problem */}
      <div>
        <h4 class="text-sm font-semibold text-gray-900 mb-1">Problem</h4>
        <p class="text-gray-600 text-sm leading-relaxed">{project.problem}</p>
      </div>

      {/* Approach - Show only in full view or featured */}
      {(showFullDescription || isFeatured) && (
        <div>
          <h4 class="text-sm font-semibold text-gray-900 mb-1">Approach</h4>
          <ul class="text-gray-600 text-sm space-y-1">
            {project.approach.map((item) => (
              <li class="flex items-start">
                <span class="text-blue-500 mr-2 mt-1">•</span>
                <span class="leading-relaxed">{item}</span>
              </li>
            ))}
          </ul>
        </div>
      )}

      {/* Impact */}
      <div>
        <h4 class="text-sm font-semibold text-gray-900 mb-1">Impact</h4>
        <ul class="text-gray-600 text-sm space-y-1">
          {project.impact.map((item) => (
            <li class="flex items-start">
              <span class="text-green-500 mr-2 mt-1">✓</span>
              <span class="leading-relaxed">{item}</span>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex flex-wrap gap-3">
      {project.links.repo && (
        <Button
          variant="ghost"
          size="sm"
          href={project.links.repo}
          target="_blank"
          class="text-xs"
        >
          {project.links.repo.includes('github.com') ? (
            <>
              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
              </svg>
              View Code
            </>
          ) : (
            <>
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              View Paper
            </>
          )}
        </Button>
      )}
      
      {project.links.live && (
        <Button
          variant="ghost"
          size="sm"
          href={project.links.live}
          target="_blank"
          class="text-xs"
        >
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
          Live Demo
        </Button>
      )}

      {project.links.website && (
        <Button
          variant="ghost"
          size="sm"
          href={project.links.website}
          target="_blank"
          class="text-xs"
        >
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12c0 1.2-4.03 6-9 6s-9-4.8-9-6c0-1.2 4.03-6 9-6s9 4.8 9 6Z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
          </svg>
          Visit Website
        </Button>
      )}

      {!isCompact && (
        <Button
          variant="ghost"
          size="sm"
          href={`/work#${project.slug}`}
          class="text-xs ml-auto"
        >
          Learn More
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </Button>
      )}
    </div>
  </div>
</article>